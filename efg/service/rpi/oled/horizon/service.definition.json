{
    "org": "$HZN_ORG_ID",
    "label": "$SERVICE_NAME for $ARCH",
    "description": "A RPi I2C OLED service",
    "public": true,
    "documentation": "",
    "url": "$MYDOMAIN.$SERVICE_NAME",
    "version": "$SERVICE_VERSION",
    "arch": "$ARCH",
    "sharable": "singleton",
    "requiredServices": [],
    "userInput": [
	{
            "name" : "MOCK",
	    "label": "Whether mock the service",
            "type" : "boolean",
	    "defaultValue": "false"
	},
	{
            "name" : "PUBLISH",
	    "label": "Whether publish the service",
            "type" : "boolean",
	    "defaultValue": "false"
	}
    ],
    "deployment": {
	"services": {
	    "rpii2coled": {
		"image": "$DOCKER_HUB_ID/${ARCH}_$SERVICE_NAME:$SERVICE_VERSION",
		"privileged": true,
		"devices": [
		    "/dev/i2c-1:/dev/i2c-1"
		]
	    }
	}
    }
}




	
